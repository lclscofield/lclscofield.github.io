// Custom styles.

// 代码块样式
code {
  color: #ff7600;
  background: #fbf7f8;
  margin: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
  margin: 5px 0;
  padding: 5px;
  border-radius: 3px;
}
.highlight, code, pre {
  border: 1px solid #d6d6d6;
}

// 主页文章添加阴影效果
.post {
  margin-top: 60px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

// 百度分享样式修改
.sr-bdimgshare {
  display: none !important;
}

// 首页标题背景颜色
.site-meta {
  background: #b5cfea;
}

// 加载条颜色
.headband {
  background: #a8c1d7;
}

// 菜单激活和hover颜色
.menu-item-active a,
.menu .menu-item a:hover,
.menu .menu-item span.exturl:hover {
  background: #b5cfea;
}
.menu-item a {
  border-bottom: none !important;
}

// 侧边阴影
.sidebar-inner,
.header-inner {
  box-shadow: 0 0 5px rgba(202,203,203,0.5);
}

// 归档文章标题颜色
.posts-collapse .post-title a {
  color: #4d91de;
}

// 标签字体大小
.tag-cloud-tags a {
  font-size: 14px !important;
}

// 百度分享样式
.bdshare-slide-list a:hover {
  background-color: #c8e7f1 !important;
}

// 文章样式
.post {
  margin-top: 0;
}

// 版权
.my_post_copyright {
  norder: none;
  box-shadow: 0 1px 3px 2px rgba(202,203,203,0.5);

  p {
    padding: 5px 10px;
  }
  a:hover {
    color: #1ca91c;
  }
  span {
    color: #dc9696;
  }
}


